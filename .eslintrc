{
    "parser": "@babel/eslint-parser",
    "extends": ["airbnb/hooks"],
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "rules": {
      "react/jsx-filename-extension": [1, { "extensions": [".js"] }],
      "indent": ["error", 4],
      "react/jsx-indent": ["error", 4],
      "react/jsx-indent-props": ["error", 4]
    },
    "globals": {
      "window": true,
      "document": true
    }
  }
  